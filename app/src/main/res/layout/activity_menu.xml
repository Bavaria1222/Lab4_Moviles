<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido, usuario@ejemplo.com"
        android:textSize="18sp"
        android:paddingBottom="24dp"/>

    <TextView
        android:id="@+id/btnEstudiantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estudiantes"
        android:textSize="16sp"
        android:textColor="?attr/colorPrimary"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/btnProfesores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profesores"
        android:textSize="16sp"
        android:textColor="?attr/colorPrimary"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/btnCarreras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carreras"
        android:textSize="16sp"
        android:textColor="?attr/colorPrimary"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/btnCursos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cursos"
        android:textSize="16sp"
        android:textColor="?attr/colorPrimary"
        android:padding="8dp"/>

    <!-- Nueva opción para Ciclos -->
    <TextView
        android:id="@+id/btnCiclos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciclos"
        android:textSize="16sp"
        android:textColor="?attr/colorPrimary"
        android:padding="8dp"/>

    <!-- Nueva opción para Grupos -->
    <TextView
        android:id="@+id/btnGrupos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grupos"
        android:textSize="16sp"
        android:textColor="?attr/colorPrimary"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/btnMatriculas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matrículas"
        android:textSize="16sp"
        android:textColor="?attr/colorPrimary"
        android:padding="8dp"/>


    <!-- Contenedor donde se cargan los fragments -->
    <FrameLayout
        android:id="@+id/contenedorFragmento"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>
</LinearLayout>
